{
  "name": "@mukulasoft/utils",
  "version": "1.0.0",
  "description": "Shared utility helpers for MukulaSoft apps",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -w -p tsconfig.build.json",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0",
    "test": "vitest run --config vitest.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MukulaSoft/monorepo.git",
    "directory": "packages/utils"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "homepage": "https://mukulasoft.github.io/monorepo/",
  "license": "UNLICENSED"
}
